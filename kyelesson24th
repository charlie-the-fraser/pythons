from datetime import datetime
loans = {}

def checkDate(date):
    try:
        datetime.strptime(date, "%d/%m/%Y").date()
    except:
        print("Sorry, you did not enter a valid date")
        valid = False
    else:
        valid = True
    return datetime.strptime(date, "%d/%m/%Y").date(), valid

